@page "{id}"
@model EventFind.Pages.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h4>Are you sure you want to delete this user?</h4>

<div>
    <strong>@Model.UserInfo.FullName</strong> <br />
    <small>@Model.UserInfo.Email</small>
</div>

<form method="post">
    <input type="hidden" asp-for="UserInfo.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Dashboard" class="btn btn-secondary">Cancel</a>
</form>
