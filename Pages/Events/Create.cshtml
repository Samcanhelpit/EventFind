@page
@model EventFind.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<h1>Create Event</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="Event.User_ID" value="0" />
        <label>Category</label>
        <select asp-for="Event.Category_ID" asp-items="Model.Categories" class="form-control">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="Event.Category_ID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Event.Title" class="form-control" />
        <span asp-validation-for="Event.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Event.Description" class="form-control"></textarea>
        <span asp-validation-for="Event.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="Event.StartDate" class="form-control" type="date" />
        <span asp-validation-for="Event.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="Event.EndDate" class="form-control" type="date" />
        <span asp-validation-for="Event.EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>City</label>
        <input asp-for="Event.City" class="form-control" />
        <span asp-validation-for="Event.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Country</label>
        <input asp-for="Event.Country" class="form-control" />
        <span asp-validation-for="Event.Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Event.Address" class="form-control" />
        <span asp-validation-for="Event.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Signup Link From Creator</label>
        <input asp-for="Event.SignupLinkFromCreator" class="form-control" />
        <span asp-validation-for="Event.SignupLinkFromCreator" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Event.IsPromoted" class="form-check-input" id="Event_IsPromoted" />
        <label class="form-check-label" asp-for="Event.IsPromoted">Promote this event</label>
        <span asp-validation-for="Event.IsPromoted" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="submitButton">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const checkbox = document.querySelector('#Event_IsPromoted');
        const submitButton = document.querySelector('#submitButton');

        if (checkbox && submitButton) {
            checkbox.addEventListener('change', () => {
                submitButton.textContent = checkbox.checked ? 'Pay Now' : 'Create';
            });

            // Set initial label in case of form re-render with checkbox checked
            if (checkbox.checked) {
                submitButton.textContent = 'Pay Now';
            }
        }
    </script>
}
